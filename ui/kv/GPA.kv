<GPA_Screen>:
    name: 'GPA'
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)

        MDTopAppBar:
            title: "GPA Calculator"
            elevation: 4
            padding: ["20dp", 0, "50dp", 0]
            left_action_items: [["arrow-left", lambda x: app.switch_screen('hello')]]
            pos_hint: {"top": 1}

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            size_hint_y: None
            height: dp(300)

            MDRaisedButton:
                id: course_dropdown
                text: "Select Course"
                size_hint_x: 1
                on_release: root.menu.open()

            MDTextField:
                id: participation_score
                hint_text: "Participation Score (10%)"
                input_filter: 'float'
                helper_text: "Enter score from 0-10"
                helper_text_mode: "on_error"

            MDTextField:
                id: midterm_score
                hint_text: "Midterm Score (40%)"
                input_filter: 'float'
                helper_text: "Enter score from 0-10"
                helper_text_mode: "on_error"

            MDTextField:
                id: final_score
                hint_text: "Final Exam Score (50%)"
                input_filter: 'float'
                helper_text: "Enter score from 0-10"
                helper_text_mode: "on_error"

        MDRaisedButton:
            text: "Calculate Grade"
            size_hint_x: 0.8
            pos_hint: {'center_x': .5}
            on_press: root.update_grades()

        ScrollView:
            MDLabel:
                id: grade_result
                text: "Grades will appear here"
                theme_text_color: 'Secondary'
                halign: 'left'
                size_hint_y: None
                height: self.texture_size[1]
                padding: dp(10), dp(10)
                markup: True

